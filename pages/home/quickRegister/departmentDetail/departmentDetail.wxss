/* 背景 */
.background {
height: 100%;
background-color: rgb(236, 247, 247);
}
/* 清楚浮动 */
.clearfix::before,.clearfix::after {
content: "";
display: table;
}
.clearfix::after {
clear: both;
}
/* 最上面的布局 */
.top {
width: 100%;
height:30px;
line-height: 30px;
padding-left: 10rpx; 
background-color: white;
}
/* 上左 */
.top_left {
float: left;
}
/* 圆圈 */
.circle {
position: relative;
float: right;
margin-left: 10rpx;
margin-top: 8px;
width: 14px;
height: 14px;
border-radius: 50%;
border: 1px solid gray;
}
/* 三角形 */
.tiangle {
position: absolute;
left: 1px;
text-align: center;
width: 0;
height: 0;
border-right: 5px solid transparent;
border-left: 5px solid transparent;
}
/* 上右 */
.top_right {
float: right;
margin-top: 3px;
margin-right: 10rpx;
height: 24px;
line-height: 24px;
text-align: center;
/* border: 1px solid rgb(108, 199, 143); */
border-radius: 3px
}
/* 按日期挂号 */
.followDate {
float: left; 
width: 200rpx;
border-radius: 3px;
color: white;
background-color: rgb(52, 150, 90);
}
