/* 背景 */
.background {
height: 100%;
background-color: rgb(236, 247, 247);
}
/* 清楚浮动 */
.clearfix::before,.clearfix::after {
content: "";
display: table;
}
.clearfix::after {
clear: both;
}
/* 最上面的布局 */
.top {
width: 100%;
height:30px;
line-height: 30px;
padding-left: 10rpx; 
background-color: white;
}
/* 上左 */
.top_left {
float: left;
}
/* 圆圈 */
.circle {
position: relative;
float: right;
margin-left: 10rpx;
margin-top: 8px;
width: 14px;
height: 14px;
border-radius: 50%;
border: 1px solid rgb(236, 236, 236);
}
/* 三角形 */
.tiangle {
position: absolute;
left: 1px;
text-align: center;
width: 0;
height: 0;
border-right: 5px solid transparent;
border-left: 5px solid transparent;
}
/* 上右 */
.top_right {
float: right;
margin-top: 2px;
margin-right: 10rpx;
height: 24px;
line-height: 24px;
text-align: center;
}
/* 按日期挂号 */
.followDate {
float: left; 
width: 200rpx;
border: 1px solid rgb(52, 150, 90);
border-right: 0;
border-top-left-radius: 3px;
border-bottom-left-radius: 3px;
color: white;
background-color: rgb(52, 150, 90);
}
/* 按医生挂号 */
.followDoctor {
float: right; 
width: 200rpx;
border: 1px solid rgb(52, 150, 90);
border-left: 0;
border-top-right-radius: 3px;
border-bottom-right-radius: 3px;
color: rgb(52, 150, 90);
background-color: white;
}
/* 星期布局(weekBody) */
.weekBody {
background-color: white;
}
/* 左右布局 */
.weekLeft {
display: flex;
flex-direction: row; 
}
/* 星期几的样式 */
.week {
width: 108rpx;
padding: 5px 0;
font-weight: 500;
font-size: 16px;
text-align: center;
border-top: 0.6px solid rgb(224, 224, 224);
border-bottom: 0.6px solid rgb(224, 224, 224);
}
/* 星期几对应日期的布局 */
.weekDate {
font-size: 12px;
text-align: center;
width: 108rpx;
padding: 10px 0 15px;
color: black;
}
/* 挂号圆圈 */
.circleRegister {
width: 40px;
height: 40px;
border-radius: 50%;
background-color: rgb(52, 150, 90); 
color: white;
padding: 5px;
margin: 0 auto;
margin-top: -5px;
}
/* 有号消失 */
.haveRegister {
display: none;
}
/* 日期不可点击 */
.haveRegister2 {
pointer-events: none;
padding: 10px 0 ;
color: gray;
}
/* 医生信息 */
.doctorBox {
  border-top: 0.6px solid rgb(224, 224, 224);
  border-bottom: 0.6px solid rgb(224, 224, 224);
  background-color: white;
}
/* 余号为0时禁止点击医生 */
.doctorBind {
  pointer-events: none;
}
.doctorLeft {
  float: left;
  padding: 12px 0;
  font-size: 16px;
}
.doctorImg {
  float: left;
  width: 35px;
  height: 42px;
  margin-left: 10rpx;
}
.doctorName {
  float: left;
  padding: 12px 0;
  margin-left: 38rpx;
}
.doctorRight {
  float: right;
  font-size: 12px;
  padding: 20px 0;
  margin-right: 10rpx;
  color: white
}
.moreNumber {
  float: left;
  width: 154rpx;
  padding: 3px 30rpx;
  margin-right: 10rpx;
  border-radius: 3px;
  background-color: green;
}
.price {
  float: left;
  width: 154rpx;
  padding: 3px 30rpx;
  border-radius: 3px;
  background-color: orangered;
}
/* 无医生 */
.search_no{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.search_Picture{
  margin-top: 200rpx;
  width: 200rpx;
  height: 200rpx;
}
.search_Text{
  margin-top: 50rpx;
  font-size: 35rpx;
  font-weight: 900;
}