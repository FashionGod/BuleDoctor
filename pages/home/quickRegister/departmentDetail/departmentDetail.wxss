/* 星期布局(weekBody) */
.weekBody {
background-color: white;
}
/* 左右布局 */
.weekLeft {
display: flex;
flex-direction: row; 
}
/* 星期几的样式 */
.week {
width: 108rpx;
padding: 5px 0;
font-weight: 500;
font-size: 16px;
text-align: center;
border-top: 0.6px solid gray;
border-bottom: 0.6px solid gray;
}
/* 星期几对应日期的布局 */
.weekDate {
font-size: 12px;
text-align: center;
width: 108rpx;
padding: 10px 0 15px;
}
/* 挂号圆圈 */
.circleRegister {
width: 40px;
height: 40px;
border-radius: 50%;
background-color: rgb(52, 150, 90); 
color: white;
padding: 5px;
margin: 0 auto;
margin-top: -5px;
}
/* 有号消失 */
.haveRegister {
display: none;
}
/* 日期不可点击 */
.haveRegister2 {
pointer-events: none;
padding: 10px 0 ;
color: gray;
}
